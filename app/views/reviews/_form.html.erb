<%= simple_form_for [@restaurant, @review] do |f| %>

  <div id="error_explanation">
      <ul><% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %></ul>
  </div>

  <%= f.input :content %>
  <%= f.input :rating, collection: (0..5).to_a %>
  <%= f.submit class: 'btn btn-success' %>
<% end %>
